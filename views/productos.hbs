{{!-- Función para tomar los datos del Modal --}}

<script>

    $(document).ready(function () {

        $('#mitabla').on('click', '.delete', function () {
            let idProducto = $(this).data('id');
            $('#DeleteModal').modal('show')
        })

    })


</script>